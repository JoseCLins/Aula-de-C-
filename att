#include <stdio.h>
#include <conio.h>
int main (void)
{
  int valor;
  
  printf ("Digite um valor de 1 a 7: ");
  scanf("%d", &valor);
  
  switch ( valor )
  {
    case 1 :
    printf ("Segunda\n");
    break;
    
    case 2 :
    printf ("Terça\n");
    break;
    
    case 3 :
    printf ("Quarta\n");
    break;
    
    case 4 :
    printf ("Quinta\n");
    break;
    
    case 5 :
    printf ("Sexta\n");
    break;
    
    case 6 :
    printf ("Sábado\n");
    break;
    
    case 7 :
    printf ("Domingo\n");
    break;
    
    default :
    printf ("Não existe esse valor.\n");
  }
  
  getch();
  return 0;
}
